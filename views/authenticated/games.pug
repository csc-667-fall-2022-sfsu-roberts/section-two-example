extends layout

block content
  #waiting-message.row(class=starting ? "hidden" : "")
    .col
      .text-center
        .spinner-border(role="status")
        p Waiting for all users to join #{joined_count} out of #{start_count}
  #game(class=starting ? "" : "hidden")
    .player.player-minus-2
      .username
      .player-hand
    .player.player-minus-1
      .username
      .player-hand
    .draw-pile
      .uno-card.card-color-special.card-type-0
    .discard-pile
    .player.player-minus-3
      .player-hand
      .username
    .player.player-current
      .username
      .player-hand
    .chat
      p Chat

block scripts
  script(src="/javascripts/socket.js")
  script(src="/javascripts/games.js")
